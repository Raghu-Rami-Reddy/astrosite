		</div>

		<!-- Email -->
		<div class="bg-white rounded-3xl p-6 shadow-md">
			<h2 class="font-bold text-lg md:text-3xl">Email</h2>
			<p class="text-green-500 mt-2 md:text-2xl">info@remediumtherapeutics.com</p>
		</div>

		<!-- Address -->
		<div class="bg-white rounded-3xl p-6 shadow-md">
			<h2 class="font-bold text-lg md:text-3xl">Address</h2>
			<p class="mt-2 md:text-2xl">
